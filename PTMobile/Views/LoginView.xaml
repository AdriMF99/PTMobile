<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="PTMobile.Views.LoginView"
             Title="Login">
    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal" HorizontalOptions="End">
            <Image Source="logo.png" WidthRequest="40" HeightRequest="40" Margin="10" />
            <Label Text="Nombre de Usuario" VerticalOptions="Center" Margin="0,10,10,10" x:Name="currentUser" HorizontalTextAlignment="End" />
        </StackLayout>
    </NavigationPage.TitleView>
    <Grid RowDefinitions=".3*,.7*">
        <Image Aspect="AspectFill" Source="background.jpg"/>
        <Grid BackgroundColor="#6f9f9b" Opacity=".3"/>
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Image Grid.Column="1" 
               Aspect="AspectFit"
               WidthRequest="120" 
               HeightRequest="120"
               Source="Resources/Images/logo.png"
               VerticalOptions="Center"
               Margin="0,0,20,0"/>
        </Grid>
        <Grid Grid.Row="1">
            <RoundRectangle Margin="-5,-30,-5,-2"
                         CornerRadius="30,30,0,0"
                         Fill="#e5ecee"/>
            <VerticalStackLayout Margin="30,0,30,0">
                <Label FontAttributes="Bold"
                    FontFamily="bold"
                    FontSize="Medium"
                    Text="Welcome!"
                    TextColor="#3d3d3f"/>
                <Label FontFamily="medium"
                    Text="Login"
                    TextColor="#a3a3a4"/>
                <Grid Margin="0,30,0,0" ColumnDefinitions=".2*,.8*">
                    <RoundRectangle
                        BackgroundColor="Transparent"
                        CornerRadius="10"
                        HeightRequest="60"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="60"/>

                    <Image 
                           HorizontalOptions="Center"
                           Source="user_solid.svg"
                           HeightRequest="40">

                        <Image.Behaviors>
                            <toolkit:IconTintColorBehavior TintColor="#4f3f9B" />
                        </Image.Behaviors>
                    </Image>

                    <Entry
                         Text="{Binding Username}"
                        Grid.Column="1"
                        Placeholder="Username"
                        VerticalOptions="Center"
                        />
                </Grid>

                <Grid Margin="0,30,0,0" ColumnDefinitions=".2*,.8*">
                    <RoundRectangle
                        BackgroundColor="Transparent"
                        CornerRadius="10"
                        HeightRequest="60"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="60"/>

                    <Image 
                        HorizontalOptions="Center"
                         Source="password.svg"
                         HeightRequest="40">

                        <Image.Behaviors>
                            <toolkit:IconTintColorBehavior TintColor="#4f3f9B" />
                        </Image.Behaviors>
                    </Image>
                    <Entry
                        Text="{Binding Password}"
                        Grid.Column="1"
                        Placeholder="Password"
                        IsPassword="True"
                        VerticalOptions="Center"
                         />

                    <Button 
                    Text="ðŸ‘"
                    WidthRequest="60"
                    HeightRequest="60"
                    BackgroundColor="Transparent"
                    Command="{Binding TogglePasswordVisibilityCommand}"
                    HorizontalOptions="End"
                    VerticalOptions="Center"
                    Grid.Column="1"/>

                </Grid>
                <Button
                    x:Name="LoginButton"
                    Text="Login"
                    Command="{Binding LoginFormCommand}"
                    BackgroundColor="#4f3f9B"
                    TextColor="White"
                    CornerRadius="25"
                    Margin="0,30,0,0"
                    VerticalOptions="Center"
                    HeightRequest="60"
                    IsEnabled="{Binding ButtonLoginIsEnabled}"
                    Opacity="{Binding ButtonLoginOpacity}"/>
                <Label Text="{Binding ErrorText}"
                    FontSize="Small"
                    TextColor="Red"
                    IsVisible="{Binding ErrorTextIsEnable}"
                    VerticalOptions="Center"
                    HorizontalOptions="Center" />
                <HorizontalStackLayout HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Margin="0,10,0,0"
                    Spacing="10">
                    <Button Text="Forgot Password?"
                        Command="{Binding ForgotPasswordCommand}"
                        BackgroundColor="Transparent"
                        TextColor="#4f3f9B" />
                    <Button Text="Sign Up"
                        Command="{Binding CreateAccountCommand}"
                        BackgroundColor="Transparent"
                        TextColor="#4f3f9B" />
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>
