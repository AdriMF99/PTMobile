<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PTMobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PTMobile.Views"
    xmlns:settings="clr-namespace:PTMobile.Views"
    xmlns:views="clr-namespace:PTMobile.Views"
    Title="PTMobile">
    <!--Shell.FlyoutBehavior="Disabled"  (esto es para que el menu este disabled)-->


    <FlyoutItem Title="Settings" Icon="config.svg">
        <ShellContent Title="Update Fields" ContentTemplate="{DataTemplate views:LoginView}" />
    </FlyoutItem>
    
    <ShellContent Title="Login" ContentTemplate="{DataTemplate views:LoginView}" Route="MainPage" />

    <!--<ShellContent Title="Main Page" ContentTemplate="{DataTemplate views:MainPage}" />-->

    <ShellContent Title="All Projects" ContentTemplate="{DataTemplate views:AllProjects}" Route="AllProjects" />


    <ShellContent Title="All Projects to add" ContentTemplate="{DataTemplate local:AllProjectsToAdd}" Route="AllProjectsToAdd" />

    <ShellContent Title="All Users" ContentTemplate="{DataTemplate local:AllUsersView}" Route="AllUsersView" />

    <ShellContent Title="Code Validation" ContentTemplate="{DataTemplate local:CodeValidationView}" Route="CodeValidationView" />

    <ShellContent Title="Create Account" ContentTemplate="{DataTemplate local:CreateAccountView}" Route="CreateAccountView" />

    <ShellContent Title="Entry Code Forgot Password" ContentTemplate="{DataTemplate local:EntryCodeForgotPassword}" Route="EntryCodeForgotPassword" />

    <ShellContent Title="Forgot Password" ContentTemplate="{DataTemplate local:ForgotPasswordView}" Route="ForgotPasswordView" />

    <ShellContent Title="Password Add Project" ContentTemplate="{DataTemplate local:PasswordAddProject}" Route="PasswordAddProject" />

    <ShellContent Title="Verify Account" ContentTemplate="{DataTemplate local:VerifyAccount}" Route="VerifyAccount" />

</Shell>
